    }

    /* THE PLAYGROUND: Fixed height so button has space to move */
    .button-zone {
      position: relative;
      width: 100%;
      height: 250px; /* Increased height for more movement room */
      margin: 0 auto;
      /* IMPORTANT: Stops the phone from scrolling while Khushi tries to tap No */
      touch-action: none; 
    }

    button {
      position: absolute;
      padding: 16px 28px;
      font-size: 20px;
      font-weight: 800;
      border-radius: 999px;
      border: none;
      cursor: pointer;
      box-shadow: 0 8px 20px rgba(0,0,0,0.15);
      user-select: none;
      transition: transform 0.1s ease-out;
    }

