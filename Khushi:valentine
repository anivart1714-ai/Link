<body>

  <main class="card" id="mainCard">
    <span class="bear">üêº</span>
    <h1 id="question">Khushi, will you be my Valentine??</h1>

    <div class="button-zone" id="zone">
      <button id="yesBtn">Yes! ‚ù§Ô∏è</button>
      <button id="noBtn">No</button>
    </div>

    <div class="result" id="result">
      <h1 style="color: #ff3b7a;">YAY! I Knew It! ‚ù§Ô∏è</h1>
      <img src="https://media.giphy.com/media/26ufdipQqU2lhNA4g/giphy.gif" width="100%" style="border-radius: 15px;">
    </div>
  </main>

  <script>
    const yesBtn = document.getElementById('yesBtn');
    const noBtn = document.getElementById('noBtn');
    const zone = document.getElementById('zone');
    const result = document.getElementById('result');
    const question = document.getElementById('question');
    const bear = document.querySelector('.bear');

    let yesScale = 1;

    // FUNCTION TO MOVE THE NO BUTTON
    function moveNo() {
      // Calculate random positions within the zone
      const zoneRect = zone.getBoundingClientRect();
      const btnRect = noBtn.getBoundingClientRect();

      const maxX = zoneRect.width - btnRect.width;
      const maxY = zoneRect.height - btnRect.height;

      const randomX = Math.floor(Math.random() * maxX);
      const randomY = Math.floor(Math.random() * maxY);

      noBtn.style.left = randomX + 'px';
      noBtn.style.top = randomY + 'px';
      noBtn.style.bottom = 'auto'; // Reset initial bottom
      noBtn.style.transform = 'none';

      // Make YES button grow bigger
      yesScale += 0.2;
      yesBtn.style.transform = `translateX(-50%) scale(${yesScale})`;
    }

    // TRIGGER ON BOTH DESKTOP (MOVE) AND MOBILE (TOUCH)
    noBtn.addEventListener('pointerover', moveNo); // For desktop mouse
    noBtn.addEventListener('touchstart', (e) => {
        e.preventDefault(); // Stops the actual "click" from happening
        moveNo();
    });

    // SUCCESS ACTION
    yesBtn.addEventListener('click', () => {
      zone.style.display = 'none';
      question.style.display = 'none';
      bear.style.display = 'none';
      result.style.display = 'block';

      // Confetti burst
      confetti({
        particleCount: 150,
        spread: 70,
        origin: { y: 0.6 },
        colors: ['#ff3b7a', '#ffffff', '#ffd1e3']
      });
    });
  </script>
</body>
