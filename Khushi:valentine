      /* Rose Background */
      background-color: var(--bg1);
      background-image: url('https://www.transparenttextures.com/patterns/roses.png'), radial-gradient(circle at top, var(--bg2), var(--bg1));
      background-blend-mode: overlay;
      background-repeat: repeat, no-repeat;
    }

    .card {
      width: min(720px, 92vw);
      padding: 30px 22px;
      background: var(--card);
      backdrop-filter: blur(15px);
      -webkit-backdrop-filter: blur(15px);
